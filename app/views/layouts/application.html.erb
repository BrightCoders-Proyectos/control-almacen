<!DOCTYPE html>
<html>
  <head>
    <title>Control Almacen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://kit.fontawesome.com/7538c50a98.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div class="<%= flash_class(type) %>">
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
