<!DOCTYPE html>
<html>
  <head>
    <title>Warehouse Control</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark navbar-expand bg-dark flex-md-nowrap p-0 shadow">
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <%= link_to("log out", destroy_admin_session_path, method: :delete , class:'nav-link') %>
        </li>
        <a class="nav-link text-wrap" href="#">Profile</a>
      </ul>
      <a class="navbar-brand col-sm-3 col-md-2 ml-auto" href="#">Warehouse Control</a>
    </nav>
    <% flash.each do |type, msg| %>
      <div class="<%= flash_class(type) %>">
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
