<p id="notice"><%= notice %></p>

<div class="container-fluid outer-space-background-color mb-5 background-Warehouses d-flex">
  <h1 class="text-white w-75 pl-4">Warehouses</h1>
  <%= link_to new_warehouse_path, class: "btn text-white" do %>
    <i class="fas fa-plus-circle text-white"></i>
    New Warehouse
  <% end %>
</div>

<table class="table table-striped table-bordered container">
  <thead class="thead-dark">
    <tr class="shadow-sm p-3 mb-5 bg-white rounded">
      <th scope="col">Code</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.code %></td>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.location %></td>
        <td>
          <%= link_to warehouse, class: "m-3" do %><i class="fas fa-eye"></i><% end %>
          <%= link_to edit_warehouse_path(warehouse), class: "m-3" do %><i class="far fa-edit"></i><% end %>
          <%= link_to warehouse, class: "m-3", method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
